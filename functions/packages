      "net-tools"
      "nfs-utils"
      "openssh"
      "rsync"
      "tmux"
      "unzip"
      "vifm"
      "wget"
      "zip"
      "zsh")

sudo pacman -S --noconfirm --needed $(printf '%s\n' "${packages[@]}")

}

install_paru() {

declare -a packages=(

    "oreo-nord-cursors-git"

)

paru -S --noconfirm --needed $(printf '%s\n' "${packages[@]}")

}
