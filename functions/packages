}


# Declare function for pacman
install_pacman_full(){

declare -a packages=(
    "vifm"
    "base-devel"
    "lxappearance"
    "git"
    "nfs-utils"
    "openssh"
    "tmux"
    "kitty"
    "zsh"
    "curl"
    "wget"
    "fish"
    "neovim"
    "sddm"
    "lsd"
    "rsync"
    "htop"
    "neomutt"
    "cronie"
    "qtile"
    "bat"
    "net-tools"
    "rofi"
    "lxsession"
    "conky"
    "feh"
    "network-manager-applet"
    "ttf-jetbrains-mono"
    "volumeicon"
    "xfce4-settings"
    "python-psutil"
    "psmisc"
    "pipewire"
    "pipewire-pulse"
    "neofetch"
    "btop"
    "yad"
    "unzip"
    "zip"
    "pcmanfm"
    "qt5ct"
    "qt6ct"
    "sxiv"
    "qt5"
    "qt5-quickcontrols2")

sudo pacman -S --noconfirm --needed $(printf '%s\n' "${packages[@]}")

}

install_pacman_base() {

declare -a packages=(
      "base-devel"
      "bat"
      "btop"
      "cronie"
      "curl"
      "exa"
      "fish"
      "git"
